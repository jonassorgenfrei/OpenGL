#version 330   
// ----------------------------------------------------------------------------
//
// Outputs
//
// ----------------------------------------------------------------------------

out vec4 FragColor;             /**< Farbe des Fragments */

// ----------------------------------------------------------------------------
//
// Inputs
//
// ----------------------------------------------------------------------------

in vec2 fTexCoord;

// ----------------------------------------------------------------------------
//
// Uniforms & Typs
//
// ----------------------------------------------------------------------------

uniform vec4 Color;
uniform sampler2D tex;

// ----------------------------------------------------------------------------
//
// functions
//
// ----------------------------------------------------------------------------

void main() {
	FragColor = texture(tex, fTexCoord);
}
